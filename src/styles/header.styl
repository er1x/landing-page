
.header
  background-color $header-background-color
  color $header-font-color
  height 64px
  top 0
  position fixed
  width 100%
  z-index 10
  line-height 64px
  transition height .5s ease-out
  &-logo
    padding 0 10px
  &-navbar
    background-color $navbar-background-color
    &-list
      height 0
      overflow hidden
      transition height .5s ease-out
      &-item
        a
          width 100%
          display block
          padding 0 1.5rem
          text-decoration none
          color $white
      &--show
        height 200px
        overflow auto
  &-btn
    border 0
    border-radius 5px
    font-size 1.5em
    padding 0 10px
    background-color $header-btn-background-color
  &-container
    display flex
    justify-content space-between
  &--light
    background-color $header-background-color--light
    color $header-font-color--light
    box-shadow 0px 0px 10px $header-background-color
    height 67px
    .header-btn
      color $header-font-color--light
      background-color $header-btn-background-color--light
    .header-navbar
      background-color $header-background-color--light
      a
        color $header-font-color--light

@media (min-width:768px)
  .header
    display flex
    flex-direction row
    justify-content space-between
    flex-wrap wrap
    height 80px
    line-height 80px
    &-btn
      display none
    &-navbar
      &-list
        height 80px
        &-item
          display inline-block
    &--light
      height 83px
